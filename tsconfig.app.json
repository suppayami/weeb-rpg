{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "index.d.ts", "src/**/*", "src/**/*.vue", "vite-env.d.ts"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": false,
		"baseUrl": ".",
		"importsNotUsedAsValues": "remove",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		]
	}
}
